<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:padding="10dp">

    <RelativeLayout
        android:id="@+id/innerContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/border">


        <ImageView
            android:id="@+id/imageViewTeam"
            android:layout_width="123dp"
            android:layout_height="135dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerInside" />


        <TextView
            android:id="@+id/tv_TName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageViewTeam"
            android:layout_toRightOf="@+id/imageViewTeam"
            android:maxWidth="120dip"
            android:textColor="@color/black"
            android:textSize="@dimen/medium" />

        <TextView
            android:id="@+id/tv_TRole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_TName"
            android:layout_alignStart="@+id/tv_TName"
            android:layout_below="@+id/tv_TName"
            android:textColor="@color/black"
            android:textSize="@dimen/XXmedium" />

        <TextView
            android:id="@+id/tv_TDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_TRole"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/tv_TRole"
            android:layout_marginBottom="12dp"
            android:maxWidth="120dip"
            android:textColor="@color/black"
            android:textSize="@dimen/XXsmall" />

        <ImageView
            android:id="@+id/imageViewMail"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/tv_TDes"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/social_media_mail" />

    </RelativeLayout>
</RelativeLayout>

