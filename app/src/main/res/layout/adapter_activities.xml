<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cvSingleUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:id="@+id/aaa"
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/rv"
                android:layout_width="86dp"
                android:layout_height="120dp"
                android:gravity="center"
                android:weightSum="1">

                <TextView
                    android:id="@+id/view_name"
                    android:layout_width="fill_parent"
                    android:layout_height="121dp"
                    android:gravity="center"
                    android:maxWidth="2dip"
                    android:textSize="@dimen/Xsmall"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:weightSum="6">

                <TextView
                    android:id="@+id/view_des"
                    android:layout_width="fill_parent"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/view_type"
                    android:layout_width="fill_parent"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/view_age"
                    android:layout_width="fill_parent"
                    android:layout_height="25dp"
                    android:layout_weight="2.52"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/view_days"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="15dp"
                    android:layout_marginBottom="12dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/view_end"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.06"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/symbol"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.03"
                        android:text="@string/symbol"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/view_start"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.14"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                </LinearLayout>

                <Button
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="150dp"
                    android:background="@color/gray"
                    android:onClick="onClickRegister"
                    android:text="@string/toRegister"
                    android:textColor="@color/black"
                    android:textSize="@dimen/Xmedium"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>

