<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="167dp"
        android:layout_height="162dp"
        android:descendantFocusability="blocksDescendants"
        android:padding="8dp">


        <TextView
            android:id="@+id/tv_WName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="fdszvweds"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_below="@+id/tv_WDate"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:id="@+id/btn_workShop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="להרשמה" />

        <TextView
            android:id="@+id/tv_WDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:maxWidth="150dip"
            android:text="fdszvweds"
            android:textAlignment="center"
            android:textColor="#000"
            android:layout_below="@+id/tv_WName"
            android:layout_alignRight="@+id/btn_workShop"
            android:layout_alignEnd="@+id/btn_workShop"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="13dp"
            android:layout_alignLeft="@+id/btn_workShop"
            android:layout_alignStart="@+id/btn_workShop" />

        <TextView
            android:id="@+id/tv_WDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="left"
            android:inputType="text"
            android:maxWidth="150dip"
            android:text="efds"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold" />

    </RelativeLayout>

</android.support.v7.widget.CardView>