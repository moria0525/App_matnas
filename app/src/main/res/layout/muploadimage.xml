<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/et_name_event"
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:hint="שם האירוע"
        android:inputType="textPersonName" />


    <ImageButton
        android:id="@+id/gallery_event"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/gallery_event"
        android:onClick="onClickUploadPictures"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/photo_event"
        android:layout_toRightOf="@+id/et_name_event"
        android:layout_toEndOf="@+id/et_name_event"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp" />

    <TextView
        android:id="@+id/photo_event"
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="בחר תמונות להעלאה:"
        android:layout_below="@+id/et_name_event"
        android:layout_alignLeft="@+id/et_name_event"
        android:layout_alignStart="@+id/et_name_event" />

    <TextView
        android:id="@+id/counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/gallery_event"
        android:layout_alignLeft="@+id/photo_event"
        android:layout_alignStart="@+id/photo_event" />

</RelativeLayout>