<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true"
    android:background="@color/colorBackgroundHome">

    <RelativeLayout
        android:id="@+id/innerContainer"
        android:layout_width="wrap_content"
        android:layout_height="139dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/border">


        <ImageView
            android:id="@+id/imageViewEsek"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerInside"/>

        <TextView
            android:id="@+id/tv_EName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="120dip"
            android:text="TextView"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageViewEsek"
            android:layout_toEndOf="@+id/imageViewEsek"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" />

        <TextView
            android:id="@+id/tv_EDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_EName"
            android:layout_alignStart="@+id/tv_EName"
            android:layout_below="@+id/tv_EName"
            android:text="TextView"
            android:maxWidth="140dip" />

        <Button
            android:id="@+id/waze"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@color/gray"
            android:drawablePadding="0dp"
            android:drawableRight="@drawable/waze"
            android:text="נווט"
            android:textSize="16sp"
            android:layout_below="@+id/tv_EName"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp" />


        <!--<View-->
            <!--android:id="@+id/view"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:layout_marginTop="95dp"-->
            <!--android:layout_toEndOf="@+id/imageViewEsek"-->
            <!--android:layout_toRightOf="@+id/imageViewEsek"-->
            <!--android:background="@color/gray" />-->


        <Button
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@color/colorBackgroundHome"
            android:drawablePadding="-12dp"
            android:drawableRight="@drawable/phone"
            android:text="חייג"
            android:textSize="16sp"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/sms"
            android:layout_toStartOf="@+id/sms"
            android:layout_marginRight="21dp"
            android:layout_marginEnd="21dp" />


        <Button
            android:id="@+id/sms"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:background="@color/colorBackgroundHome"
            android:drawableRight="@drawable/sms"
            android:text="שלח סמס"
            android:textSize="16sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <!--<View-->
        <!--android:layout_width="1dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_marginTop="95dp"-->
        <!--android:background="@color/gray"-->
        <!--android:paddingBottom="20dp"-->
        <!--android:layout_toRightOf="@+id/phone"-->
        <!--android:layout_toLeftOf="@+id/sms"-->
        <!--android:layout_toStartOf="@+id/sms" />-->


    </RelativeLayout>


</android.support.v7.widget.CardView>

