<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/colorBackgroundHome"
    android:padding="10dp">

    <RelativeLayout
        android:id="@+id/innerContainer"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/border"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <ImageView
            android:id="@+id/imageViewEsek"
            android:layout_width="90dp"
            android:layout_height="100dp"

            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true" />


        <TextView
            android:id="@+id/tv_EName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="120dip"
            android:text="TextView"
            android:textSize="20sp"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageViewEsek"
            android:layout_toEndOf="@+id/imageViewEsek" />

        <TextView
            android:id="@+id/tv_EDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="20sp"
            android:layout_below="@+id/tv_EName"
            android:layout_alignLeft="@+id/tv_EName"
            android:layout_alignStart="@+id/tv_EName" />

        <TextView
            android:id="@+id/tv_EAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/imageViewSms"
            android:layout_alignStart="@+id/imageViewSms" />

        <ImageView
            android:id="@+id/imageViewMail"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/social_media_mail"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/imageViewSms"
            android:layout_toEndOf="@+id/imageViewSms"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp" />

        <ImageView
            android:id="@+id/imageViewSms"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/sms"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/tv_EDes"
            android:layout_toEndOf="@+id/tv_EDes"
            android:layout_marginLeft="48dp"
            android:layout_marginStart="48dp" />

        <ImageView
            android:id="@+id/imageViewWaze"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/waze"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/tv_EDes"
            android:layout_alignStart="@+id/tv_EDes" />

        <ImageView
            android:id="@+id/imageViewPhone"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/social_media_phone"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/imageViewWaze"
            android:layout_toEndOf="@+id/imageViewWaze"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp" />

    </RelativeLayout>


</RelativeLayout>

